    spacing: 10
    padding: 10

<CustomLabel@Label>:
    color: 0, 0, 0, 1
    size_hint_y: 0.2

<PageLayout>:
    CustomLayout:
        Label:
            font_size: 32
            color: 0, 0, 0, 1
            text: "Rams Rewards"
            size_hint_y: 0.2

        Button:
            text: "<logo>"
            color: 0, 0, 0, 1
            size_hint_y: 0.8
