            pos_hint: {"center_x": .5, "center_y": .5}

        CustomLayout:
            Label:
                font_size: 38
                color: 0, 0, 0, 1
                text: "Total Points: #####"
                size_hint_y: 0.2

        CustomLayout:
            CustomLabel:
                text: "<Student Name>"
            CustomLabel:
                text: "<Student ID"
            CustomLabel:
                text: "Homeroom"


    CustomLayout:
        CustomLayout:
            CustomLabel:
                font_size: 38
                text: "page2"

        CustomLayout:
